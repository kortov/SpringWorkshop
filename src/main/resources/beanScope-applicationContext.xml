<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->
    <bean id="myFortuneService"
          class="com.kortov.springworkshop.RandomFortuneService">
    </bean>

    <bean id="myCoach"
          class="com.kortov.springworkshop.TrackCoach"
          scope="prototype">
        <constructor-arg ref="myFortuneService"/>
    </bean>

    <bean id="myFootballCoach"
          class="com.kortov.springworkshop.FootballCoach"
          scope="singleton">
    </bean>

    <bean id="myBaseballCoach"
          class="com.kortov.springworkshop.BaseballCoach"
          scope="prototype">
        <constructor-arg ref="myFortuneService"/>
    </bean>
</beans>





